<div class="sixteen wide column">
    <div class="ui stackable middle aligned grid">
        {{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.show.before_first_column', {'vendor': vendor}) }}

        <div class="two wide column">
            {{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.show.before_logo', {'vendor': vendor}) }}

            <div class="ui segment">
                <img class="ui fluid image" src="{{ vendor.logoName|imagine_filter('odiseo_sylius_vendor_plugin_logo') }}" alt="{{ vendor.name }}">
            </div>

            {{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.show.after_logo', {'vendor': vendor}) }}
        </div>

        {{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.show.after_first_column', {'vendor': vendor}) }}

        <div class="four wide column">
            {{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.show.before_basic_info', {'vendor': vendor}) }}

            <h1 class="ui header">
                <span {{ sylius_test_html_attribute('vendor-name') }}>{{ vendor.name }}</span>
                <div class="sub header">
                    {{ vendor.description }}
                </div>
            </h1>

            {{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.show.after_basic_info', {'vendor': vendor}) }}
        </div>

        {{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.show.after_second_column', {'vendor': vendor}) }}
    </div>
</div>
