{% if vendor.logoName %}
    <img class="ui medium circular image" src="{{ vendor.logoName|imagine_filter('odiseo_sylius_vendor_plugin_logo') }}">
    <div class="ui hidden divider"></div>
{% endif %}

<h1 class="ui header">
    <span class="odiseo-vendor-name">{{ vendor.name }}</span>
    <div class="sub header">
        {{ vendor.description }}
    </div>
</h1>
