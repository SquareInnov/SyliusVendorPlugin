{% import '@SyliusUi/Macro/messages.html.twig' as messages %}
{% import '@SyliusUi/Macro/pagination.html.twig' as pagination %}

{{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.index.search', _context) }}

<div class="ui clearing hidden divider"></div>

{{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.index.before_list', {'vendors': resources.data}) }}

{% if resources.data|length > 0 %}
    <div class="ui doubling six column grid" id="vendors" {{ sylius_test_html_attribute('vendors') }}>
        {% include '@OdiseoSyliusVendorPlugin/Shop/Vendor/_vendors.html.twig' with {'vendors': resources.data} only %}
    </div>
    <div class="ui hidden divider"></div>

    {{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.index.before_pagination', {'vendors': resources.data}) }}

    {{ pagination.simple(resources.data) }}
{% else %}
    {{ messages.info('sylius.ui.no_results_to_display') }}
{% endif %}
