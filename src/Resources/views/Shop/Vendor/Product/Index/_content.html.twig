{% import '@SyliusUi/Macro/messages.html.twig' as messages %}
{% import '@SyliusUi/Macro/pagination.html.twig' as pagination %}

<div class="sixteen wide column">
    {{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.product.index.search', _context) }}

    <div class="ui clearing hidden divider"></div>

    {{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.product.index.before_list', {'products': resources.data}) }}

    {% if resources.data|length > 0 %}
        <div class="ui four cards" id="products" {{ sylius_test_html_attribute('products') }}>
            {% for product in resources.data %}
                {% include '@SyliusShop/Product/_box.html.twig' %}
            {% endfor %}
        </div>
        <div class="ui hidden divider"></div>

        {{ sylius_template_event('odiseo_sylius_vendor_plugin.shop.vendor.product.index.before_pagination', {'products': resources.data}) }}

        {{ pagination.simple(resources.data) }}
    {% else %}
        {{ messages.info('sylius.ui.no_results_to_display') }}
    {% endif %}
</div>
