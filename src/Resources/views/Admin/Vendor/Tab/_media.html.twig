{% form_theme form '@OdiseoSyliusVendorPlugin/Form/imagesTheme.html.twig' %}

<div class="ui tab" data-tab="media">
    <h3 class="ui top attached header">{{ 'sylius.ui.media'|trans }}</h3>

    <div class="ui attached segment">
        <div class="ui segment odiseo-image">
            {{ form_row(form.logoFile) }}
        </div>

        {{ sylius_template_event(['odiseo_sylius_vendor_plugin.admin.vendor.' ~ action ~ '.tab_media', 'odiseo_sylius_vendor_plugin.admin.vendor.tab_media'], {'form': form}) }}
    </div>
</div>
